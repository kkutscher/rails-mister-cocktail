<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Cocktails</h1>
    </div>
  </div>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
          <div class="cocktail-card">
            <div class="red_cocktail">
            </div>
            <div class="cocktail-card-content">
              <h4><%= cocktail.name %></h4>
              <br>
              <%= link_to 'More info', cocktail_path(cocktail) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
